<a href="#" id="mostrarBoton">Mostrar bot√≥n</a>

<br><br>

<button id="btnFecha" style="display:none;"></button>

<script>
  const hoy = new Date();
  const fecha = hoy.toLocaleDateString('es-ES');

  const boton = document.getElementById("btnFecha");
  boton.textContent = fecha;
  boton.style.backgroundColor = "blue";
  boton.style.color = "white";
  boton.style.padding = "10px 15px";
  boton.style.border = "none";
  boton.style.borderRadius = "5px";

  document.getElementById("mostrarBoton").addEventListener("click", function(e) {
    e.preventDefault();
    boton.style.display = "inline-block";
  });

  boton.addEventListener("click", function() {
    boton.style.backgroundColor = "red";
  });
</script>

</body>
